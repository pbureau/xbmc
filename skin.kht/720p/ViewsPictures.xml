                    <scroll>true</scroll>
                    <label>$INFO[ListItem.PictureResolution] ($INFO[ListItem.Size])</label>
                    <visible>!IsEmpty(ListItem.PictureResolution)</visible>
                </control>
            </control>
        </control>
